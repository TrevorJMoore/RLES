{
    "title": "Sensor Reading",
    "description": "A sensor reading within the RLES.",
    "type": "object",
    "properties": {
        "sensorId": {
            "description": "The unique identifier for a sensor.",
            "type": "integer",
            "minimum": 0
        },
        "timestamp": {
            "description": "The time the reading was taken. (Epoch ms)",
            "type": "number",
            "minimum": 0
        },
        "sequence": {
            "description": "Order in which the reading appears in the sequence.",
            "type": "integer",
            "minimum": 0
        },
        "value": {
            "description": "Value of the sensor's measurement.",
            "type": "number"
        },
        "status": {
            "description": "Sensor status flags of ON/OFF/STALE/WARN/FAULT.",
            "type": "string",
            "enum": ["ON", "OFF", "STALE", "WARN", "FAULT"]
        }

    },
    "required": [ "sensorId", "timestamp", "sequence", "value", "status"],
    "additionalProperties": false
}